# Editor configuration, see http://editorconfig.org
root = true

[*.json]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[tsconfig.*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false